<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QrCodeActivity">

  <TextView
      android:id="@+id/txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Hello"
      android:textColor="@color/black"
      android:textSize="40dp"
      tools:ignore="MissingConstraints" />

  <ImageView
      android:id="@+id/imageView"
      android:layout_below="@+id/txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:foregroundGravity="center"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true" />

  <ImageView
      android:id="@+id/markerTopLeft"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@drawable/img"
      android:layout_below="@+id/imageView"
      android:layout_centerHorizontal="true"
      android:visibility="invisible" />
  <ImageView
      android:id="@+id/markerTopRight"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@drawable/img"
      android:layout_below="@+id/markerTopLeft"
      android:layout_centerHorizontal="true"
      android:visibility="invisible" />
  <ImageView
      android:id="@+id/markerBottomLeft"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@drawable/img"
      android:layout_below="@+id/markerTopRight"
      android:layout_centerHorizontal="true"
      android:visibility="invisible" />
  <ImageView
      android:id="@+id/markerBottomRight"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:src="@drawable/img"
      android:layout_below="@+id/markerBottomLeft"
      android:layout_centerHorizontal="true"
      android:visibility="invisible" />

</RelativeLayout>
